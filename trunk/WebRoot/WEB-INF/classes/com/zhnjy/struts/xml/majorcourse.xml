<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="majorcourse" namespace="/" extends="struts-default">
        <action name="*MC" class="com.zhnjy.action.MajorCourseAction" method="{1}">
        
           <result name="addsuccess">/manage_jsp/major_setcourse.jsp</result>
           <result name="addfail">/manage_jsp/fail.jsp </result> 
          
           <result name="deletesuccess">/manage_jsp/success_result.html </result>
           <result name="deletefail">/manage_jsp/fail_result.html </result> 
           
           
           <result name="setsuccess">/manage_jsp/success.jsp </result>
           <result name="setfail">/manage_jsp/fail.jsp </result>
           
           <result name="querysuccess">/manage_jsp/major_setcourse.jsp </result>
           <result name="queryfail">/manage_jsp/fail.jsp </result>
           
        </action>
    </package>

</struts>
